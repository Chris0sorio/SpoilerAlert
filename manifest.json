{
  "manifest_version": 3,
  "name": "Movie Censor Extension",
  "version": "1.0",
  "description": "Censors paragraphs related to movies from the database.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "main.html",
    "default_icon": "frontend/camera.png"
  }
}
